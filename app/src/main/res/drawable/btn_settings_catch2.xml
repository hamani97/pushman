<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#b3b3b3" />
                </shape>
            </item>
            <item android:left="0dp" android:top="1dp" android:right="1dp" android:bottom="0dp">
                <shape>
                    <solid android:color="#c3d0dd" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#b3b3b3" />
                </shape>
            </item>
            <item android:left="0dp" android:top="1dp" android:right="1dp" android:bottom="0dp">
                <shape>
                    <solid android:color="#abcff6" />
                    <gradient android:startColor="#cfe0f4" android:endColor="#bcd5f1" android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>